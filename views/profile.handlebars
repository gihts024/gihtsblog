<div class="row">
  <div class="col-auto">
    <h4>Welcome, {{name}}!</h4>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h5>Create a New Post:</h5>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog title:</label>
        <input class="form-input" type="text" id="blog-title" title="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-keywords">search keywords:</label>
        <input class="form-input" type="text" id="blog-keywords" name="blog-keywords" />
      </div>
      <div class="form-group" >
        <label for="blog-desc">description:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3> Current blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row">
      <div class="col s5 push-s7 "><span class="flow-text"></span>
        <h4><a href="/blog/{{blog.id}}">Title: {{blog.title}}</a></h4>
      </div>
       <div class="col s7 pull-s5"><span class="flow-text"></span>
       <h4><a href="/blog/{{blog.id}}">Keywords: {{blog.keywords}}</a></h4>
      </div>
      <div class="s12 m6 l3">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
